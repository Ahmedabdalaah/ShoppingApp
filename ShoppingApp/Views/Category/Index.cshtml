@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}
<h3>Category Items</h3>
<partial name="_NotifyPartial" />

<div class="text-end">
    <a asp-controller="Category" asp-action="Add" class="btn btn-success">
        <i class="bi bi-file-plus"></i>
        &nbsp; Add new Category
    </a>
</div>

<table class="table table-hover">
    <thead>
        <tr class="table-active">
            <th>Code</th>
            <th>Category Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr class="table-active">
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn-sm btn-success">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                </td>
                <td>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn-sm btn-danger">
                        <i class="bi bi-trash3-fill"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
