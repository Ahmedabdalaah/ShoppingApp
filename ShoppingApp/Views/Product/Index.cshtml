@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";
}
<h3>Product Items</h3>
<partial name="_NotifyPartial" />

<div class="text-end">
    <a asp-controller="Product" asp-action="Add" class="btn btn-success">
        <i class="bi bi-file-plus"></i>
        &nbsp; Add new Product
    </a>
</div>

<table class="table table-hover">
    <thead>
        <tr class="table-active">
            <th>Code</th>
            <th>Product Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model){
            <tr class="table-active">
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn-sm btn-success">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                </td>
                <td>
                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn-sm btn-danger">
                        <i class="bi bi-trash3-fill"></i>
                    </a>
                </td>
            </tr>

        }
    </tbody>
